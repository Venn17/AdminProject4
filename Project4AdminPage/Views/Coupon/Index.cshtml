@model IEnumerable<Project4AdminPage.Models.Coupon>

@{
    ViewData["Title"] = "Index";
}
<div>
    <h2 class="text-center">Quản lý Voucher</h2>
</div>
<form asp-controller="Coupon" asp-action="Search" method="get" class="form-inline">
    <div class="col-8">
        <a asp-controller="Coupon" asp-action="Create" class="btn btn-warning">Thêm mới</a>
    </div>
    <div class="form-group col-4">
        <input class="form-control mr-1" type="text" placeholder="Tên voucher" name="key" />
        <input type="submit" value="Tìm Kiếm" class="btn btn-success" />
    </div>
</form>

<table class="table table-bordered mt-2">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Mã Voucher
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Giảm Giá
            </th>
            <th>
                Trạng Thái
            </th>
            <th>
                Các Chức Năng
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Percent) %
                </td>
                <td>
                    @if (item.Status == true)
                    {
                        <p class="text-success">Đang Hoạt Động</p>
                    }
                    else
                    {
                        <p class="text-danger">Không Hoạt Động</p>
                    }
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.totalPage > 1)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @if (ViewBag.currentPage > 1)
            {
                <li class="page-item"><a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)">Previous</a></li>
            }
            @for (int i = 1; i <= ViewBag.totalPage; i++)
            {
                if (i == ViewBag.currentPage)
                {
                    <li class="page-item active"><a class="page-link" href="?page=@i">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="?page=@i">@i</a></li>
                }

            }
            @if (ViewBag.currentPage < ViewBag.totalPage)
            {
                <li class="page-item"><a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)">Next</a></li>
            }
        </ul>
    </nav>
}
