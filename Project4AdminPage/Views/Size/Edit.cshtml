@model Project4AdminPage.Models.Sizes

@{
    ViewData["Title"] = "Edit";
}
<div class="text-center">
    <h2>Chỉnh sửa size sản phẩm</h2>
</div>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Size">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" hidden class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên Size</label>
                <select asp-for="Name" class="form-control">
                    <option value="">Chọn Size</option>
                    <option value="S">S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                </select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label">Sản Phẩm</label>
                <select asp-for="ProductID" class="form-control" onfocus='this.size=5;' onblur='this.size=1;' onchange='this.size = 1; this.blur();'>
                    @foreach (var item in ViewBag.Product)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay Lại</a>
</div>

