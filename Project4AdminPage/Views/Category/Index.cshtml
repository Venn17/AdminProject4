@model IEnumerable<Project4AdminPage.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<div>
    <h2 class="text-center">Quản lý thể loại</h2>
</div>
<form asp-controller="Category" asp-action="Search" method="get" class="form-inline">
    <div class="col-8">
        <a asp-controller="Category" asp-action="Create" class="btn btn-warning">Thêm mới</a>
    </div>
    <div class="form-group col-4">
        <input class="form-control mr-1" type="text" placeholder="Tên thể loại" name="key" />
        <input type="submit" value="Tìm Kiếm" class="btn btn-success" />
    </div>
</form>

<table class="table table-bordered mt-2">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Tên Thể Loại
            </th>
            <th>
                Trạng Thái
            </th>
            <th>
                Các Chức Năng
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if(item.Status == true)
                {
                    <p class="text-success">Đang Hoạt Động</p>
                }
                else
                {
                    <p class="text-danger">Không Hoạt Động</p>
                }
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
