@model IEnumerable<Project4AdminPage.Models.Users>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h2>Quản Lý Người Dùng</h2>
</div>
<form asp-controller="Users" asp-action="Search" method="get" class="form-inline">
    <div class="col-6">
        <a asp-controller="Login" asp-action="Register" class="btn btn-warning">Đăng Ký Tài Khoản Mới</a>
    </div>
    <div class="form-group col-6">
        <input class="form-control mr-1" type="text" placeholder="Tên người dùng" name="key" />
        <input type="submit" value="Tìm Kiếm" class="btn btn-success" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Ảnh Đại Diện
            </th>
            <th>
                Tên Người Dùng
            </th>
            <th>
                Email
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th>
                Địa Chỉ
            </th>
            <th>
                Quyền Truy Cập
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/avatars/@item.Avatar" alt="@item.Name" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @if (item.Role == 0)
                    {
                        <p>Người Dùng</p>
                    }
                    else
                    {
                        <p>Quản Trị Viên</p>
                    }
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Detail" asp-route-id="@item.Id">Chi Tiết</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.totalPage > 1)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @if (ViewBag.currentPage > 1)
            {
                <li class="page-item"><a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)">Previous</a></li>
            }
            @for (int i = 1; i <= ViewBag.totalPage; i++)
            {
                if (i == ViewBag.currentPage)
                {
                    <li class="page-item active"><a class="page-link" href="?page=@i">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="?page=@i">@i</a></li>
                }

            }
            @if (ViewBag.currentPage < ViewBag.totalPage)
            {
                <li class="page-item"><a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)">Next</a></li>
            }
        </ul>
    </nav>
}